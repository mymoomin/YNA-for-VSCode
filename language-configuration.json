{
	"comments": {
		"blockComment": [ "{!", "}" ]
	},
	"brackets": [
		["{", "}"]
	],
	"autoClosingPairs": [
		{ "open": "{", "close": "}"},
		{ "open": "[", "close": "]"},
		{ "open": "(", "close": ")" },
		{ "open": "'", "close": "'" },
	],
	"surroundingPairs": [
		{ "open": "'", "close": "'" },
		{ "open": "\"", "close": "\"" },
		{ "open": "{", "close": "}"},
		{ "open": "[", "close": "]"},
		{ "open": "(", "close": ")" },
		{ "open": "<", "close": ">" },
	],
	"indentationRules": {
		"increaseIndentPattern": "^\\s*({(?:func|set|save|when|choose|wchoose|user|time|rep|num|member|nameof|parse|len|upper|lower|title|oneline|slice|math|void|call|loop).*?[:;]|;)\\s*$",
		"decreaseIndentPattern": "^\\s*(;}|;$)",
	},
}